package code.snippet


import net.liftweb.util.Helpers._
import net.liftweb.http.SHtml
import code.lib.{Video, Streamer}
import java.io.File

/**
 * @author ssb
 *         21/04/14
 */
class Authorized {
  var file = ""
  var title = ""

  def titleI = SHtml.onSubmit(title = _)

  def file = SHtml.onSubmit(file_ => {
    printf("Loaded video file(%s) title(%s)", file, title)
    Streamer.loadVideo(Video(title, new File(file_))
  })
}
